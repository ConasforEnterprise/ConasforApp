<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/verde_menu</item>
        <item name="android:navigationBarColor">@color/verde_menu</item>

    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <!-- Color de la flecha de retroceso -->

        <item name="colorControlNormal">@color/white</item>

         <!-- Cambia #FF0000 al color que desees -->
    </style>
    
    <style name="Theme.BottomNavigationView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/green_normal</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/verde_menu</item>
        <item name="itemIconTint">@color/green_light2</item>
        <item name="itemTextColor">@color/green_light2</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name = "android:textColor">@color/white</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/verde_menu</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <!-- Estilo redondo para el floating -->

    <style name="RoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Estilo para el floating button de las listas -->
    <style name="MyHintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">#FF0000</item> <!-- Cambia este valor al color que desees -->
    </style>

    <style name="AutocompleteStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <!-- Otros atributos de estilo según sea necesario -->
        <item name="android:popupBackground">#FAF6F7</item> <!-- Cambia este color según tus preferencias -->
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents">
        ...
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <!--<item name="android:popupBackground">@drawable/custom_popup_background</item>-->
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="TextInputLayoutRounded" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/RoundedEdges</item>
    </style>

    <!-- Efecto redodo para TextInputLayout -->
    <style name="RoundedEdges">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item> <!-- Puedes ajustar el valor según tus preferencias -->
    </style>


    <!-- Colores contextual_menu -->
    <style name="MyActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <!--
        <item name="background">@color/verde_oscuro</item>
        <item name="titleTextStyle">@style/MyActionMode.Title</item>
        <item name="subtitleTextStyle">@style/MyActionMode.Subtitle</item>
        -->
        <!--<item name="background">@color/white</item>-->
        <item name="titleTextStyle">@style/MyActionMode.Title</item>
        <item name="subtitleTextStyle">@style/MyActionMode.Subtitle</item>
    </style>

    <style name="MyActionMode.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyActionMode.Subtitle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NoPopupArrow">
        <item name="android:popupMenuStyle">@style/Widget.AppCompat.PopupMenu</item>
    </style>

    <style name="Widget.AppCompat.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:popupElevation">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:textAppearance">@style/NoPopupArrowTextAppearance</item>
    </style>

    <style name="NoPopupArrowTextAppearance" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <!-- Ajusta el estilo de texto según sea necesario -->
    </style>

</resources>