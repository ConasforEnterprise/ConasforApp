                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/contorno_subtitulo"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view12Leer">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="20dp"
                        android:text="Conductor"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        >

                    </TextView>

                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtNombreConductorLeer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lLayoutConductorLeer"
                    app:startIconDrawable="@drawable/icono_supervisor_32"
                    app:startIconTint="@color/verde_oscuro"
                    app:boxStrokeColor="@color/verde_oscuro"
                    app:hintTextColor="@color/verde_oscuro"
                    app:boxBackgroundColor="@color/white"
                    style="@style/TextInputLayoutRounded"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtNombreConductorFirmasLeer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre conductor"
                        android:enabled="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:id="@+id/rlConductorLeer"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtNombreConductorLeer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    >
                    <ImageView
                        android:id="@+id/imgFirmaConductorLeer"
                        android:layout_width="match_parent"
                        android:layout_height="256dp"
                        android:src="@drawable/img_sin_firma"
                        >
                    </ImageView>

                    <View
                        android:id="@+id/viewFirmaConductorLeer"
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:layout_below="@+id/imgFirmaConductorLeer"
                        android:layout_marginHorizontal="70dp"
                        android:layout_marginVertical="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgFirmaConductorLeer" />

                    <TextView
                        android:id="@+id/txtFirmaConductorLeer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Firma conductor"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewFirmaConductorLeer"
                        android:layout_below="@id/viewFirmaConductorLeer"
                        >

                    </TextView>

                </RelativeLayout>

                <View
                    android:id="@+id/view13Leer"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="invisible"
                    android:layout_marginTop="8dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rlConductorLeer">
                </View>


                <RelativeLayout
                    android:id="@+id/lLayoutOperadorCargueLeer"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/contorno_subtitulo"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view13Leer">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="20dp"
                        android:text="Operador de cargue"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        >

                    </TextView>

                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtNombreOperadorCargueLeer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lLayoutOperadorCargueLeer"
                    app:startIconDrawable="@drawable/icono_supervisor_32"
                    app:startIconTint="@color/verde_oscuro"
                    app:boxStrokeColor="@color/verde_oscuro"
                    app:hintTextColor="@color/verde_oscuro"
                    app:boxBackgroundColor="@color/white"
                    style="@style/TextInputLayoutRounded"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtNombreOperadorFirmasLeer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre operador de cargue"
                        android:enabled="false"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:id="@+id/rlOperadorLeer"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtNombreOperadorCargueLeer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    >

                    <ImageView
                        android:id="@+id/imgFirmaOperadorLeer"
                        android:layout_width="match_parent"
                        android:layout_height="256dp"
                        android:src="@drawable/img_sin_firma"
                        >

                    </ImageView>

                    <View
                        android:id="@+id/viewFirmaOperadorCargueLeer"
                        android:layout_width="300dp"
                        android:layout_height="1dp"
                        android:layout_below="@+id/imgFirmaOperadorLeer"
                        android:layout_marginHorizontal="70dp"
                        android:layout_marginVertical="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.495"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgFirmaOperadorLeer"
                        />

                    <TextView
                        android:id="@+id/txtFirmaOperadorCargueLeer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Firma operador"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewFirmaOperadorCargueLeer"
                        android:layout_below="@+id/viewFirmaOperadorCargueLeer"
                        >

                    </TextView>
                </RelativeLayout>


                <View
                    android:id="@+id/view14Leer"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="invisible"
                    android:layout_marginTop="8dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rlOperadorLeer"
                    >
                </View>

            </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>