<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lista_chequeo_cargue_descargue.CRUD_Listas_Cargue.Agregar_Mostras_Listas_Cargue.MisListasCargue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarListaCargue"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ToolbarTheme"
            app:title="Listas cargue"
            app:titleMarginStart="30dp"
            app:titleTextColor="@color/black"/>

        <LinearLayout
            android:id="@+id/lLayoutViewStubCrear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarListaCargue"
            >
            <ViewStub
                android:id="@+id/chipGroupStubCrear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/chip_layout"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewListas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparente"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lLayoutViewStubCrear">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardListaEliminada"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="22dp"
                android:layout_gravity="center"
                android:visibility="gone"
                >
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieAnimationEliminar"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="false"
                    app:lottie_rawRes="@raw/check_animation" />

                <TextView
                    android:id="@+id/txtlistaEliminada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Se eliminÃ³ la lista"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:visibility="gone"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rVListasCargueCrear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp"
                />

            <ProgressBar
                android:id="@+id/progressBarListasCargueCrear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_gravity="center"
                android:backgroundTint="@color/verde_menu"
                />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>