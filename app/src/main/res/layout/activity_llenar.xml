<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_menu"
    tools:context=".lista_chequeo_cargue_descargue.CRUD_Listas_Cargue.Llenar_Listas_Cargue.LlenarListasCargue"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <Button
                android:id="@+id/btnRegresarLlenar"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:drawableBottom="@drawable/baseline_arrow_back_24"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llenar lista"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha : "
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtFechaLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginStart="40dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id_lista : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/id_listaLlenarListas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Lista"
                android:textSize="18dp"
                android:textColor="@color/white"
               />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLayoutLugarCargara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.534"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabItem1CargueDescargue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/icono_num_uno_listas"
                app:tint="@null"
                app:shapeAppearanceOverlay="@style/RoundedShape"
                />

            <TextView
                android:id="@+id/txtItemInfoLugarCargue"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_gravity="center"
                android:text="Información del lugar donde se cargará"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
                tools:layout_editor_absoluteY="128dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLayoutInfoConductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.709"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lLayoutLugarCargara">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabItem2CargueDescargue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/icono_num_dos_listas"
                app:shapeAppearanceOverlay="@style/RoundedShape"
                app:tint="@null"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="207dp"/>

            <TextView
                android:id="@+id/txtItemInfoConductor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:text="Información del conductor"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.53"
                app:layout_constraintStart_toEndOf="@+id/floatingActionButton2"
                tools:layout_editor_absoluteY="227dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLayoutInfoVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lLayoutInfoConductor">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabItem3CargueDescargue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:src="@drawable/icono_num_tres_listas"
                app:tint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/RoundedShape"
                tools:layout_editor_absoluteY="301dp"/>

            <TextView
                android:id="@+id/txtItemInfoVehiculo"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:text="Información del vehículo"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="290dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLayoutEstadoCargue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.661"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lLayoutInfoVehiculo">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabItem4CargueDescargue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/icono_num_cuatro_listas"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/RoundedShape"
                app:tint="@null"
                tools:layout_editor_absoluteY="389dp"
                />

            <TextView
                android:id="@+id/txtItemEstadoCargue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:text="Estado del cargue"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="388dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLayoutFirmasNombres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.661"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lLayoutEstadoCargue">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabItem5CargueDescargue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/icono_num_cinco_listas"
                app:shapeAppearanceOverlay="@style/RoundedShape"
                app:tint="@null"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="487dp"
                />

            <TextView
                android:id="@+id/txtItemFirmasNombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:text="Firmas"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/floatingActionButton5"
                tools:layout_editor_absoluteY="502dp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnGuardarDatosCargueDescargue"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="Guardar"
            android:textColor="@color/verde_oscuro"
            android:layout_marginTop="700dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/white"
            android:clickable="true"
            />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardListaCreada"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="22dp"
        android:layout_gravity="center"
        android:visibility="gone"
        >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationButton"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/check_animation" />

        <TextView
            android:id="@+id/txtlistaCreada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista creada con éxito"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:visibility="gone"
            />

    </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/bottomSheetPadre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/white"
            android:elevation="20dp"
            android:focusableInTouchMode="true"
            app:behavior_hideable="true"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <!--
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabItemListaCargueDescargue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:elevation="8dp"
                    android:src="@drawable/estado_fab_listas_chequeo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:pressedTranslationZ="8dp"
                    app:shapeAppearanceOverlay="@style/RoundedShape"
                    app:tint="@null">

                </com.google.android.material.floatingactionbutton.FloatingActionButton>
                -->

                <TextView
                    android:id="@+id/txtNumItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/txtEncabezadoListaCargueDescargue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_remove_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white"/>

                <ImageView
                    android:id="@+id/imgNumItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:visibility="invisible"
                    android:src="@drawable/icono_num_uno_listas"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3"
                    />

                <TextView
                    android:id="@+id/txtEncabezadoListaCargueDescargue"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:text="Información del lugar donde se cargará"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.018"
                    app:layout_constraintStart_toEndOf="@+id/imgNumItem"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3"
                   />
                <!--
                <View
                    android:id="@+id/viewLenar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtEncabezadoListaCargueDescargue"
                    />
                    -->
                <!--
                <ImageButton
                    android:id="@+id/imgButtonCerrarBottomSheetCargueDescargue"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="340dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="36dp"
                    android:background="@color/transparente"
                    android:src="@drawable/icono_desplegar_abajo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </ImageButton>
                -->
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/viewLenar"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toBottomOf="@+id/txtEncabezadoListaCargueDescargue"
                />

            <FrameLayout
                android:id="@+id/bottomSheetInformacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/white"
                android:elevation="20dp"
                android:layout_below="@+id/viewLenar"
                android:focusableInTouchMode="true"
                app:behavior_hideable="true"
                />
        </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>